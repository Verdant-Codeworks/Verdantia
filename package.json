{
  "name": "verdantia",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "description": "Verdantia â€” A text-based RPG",
  "scripts": {
    "dev": "pnpm --parallel --filter @verdantia/client --filter @verdantia/server dev",
    "dev:client": "pnpm --filter @verdantia/client dev",
    "dev:server": "pnpm --filter @verdantia/server dev",
    "build": "pnpm --filter @verdantia/shared build && pnpm --parallel --filter @verdantia/client --filter @verdantia/server build",
    "build:shared": "pnpm --filter @verdantia/shared build",
    "test": "pnpm --filter @verdantia/server test",
    "lint": "pnpm --parallel -r lint",
    "clean": "pnpm --parallel -r clean"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
